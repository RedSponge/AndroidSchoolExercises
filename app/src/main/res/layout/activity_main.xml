<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:text="Welcome To The Amazing Hub Of Amazingness!"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="0.5"
        android:weightSum="3">
        <TextView android:text="Exercise"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="0dp" android:layout_weight="1"
            />

        <TextView android:text="Name"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView android:text="Enter"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewContents"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="6.5"/>

</LinearLayout>