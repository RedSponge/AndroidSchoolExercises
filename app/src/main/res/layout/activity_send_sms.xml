<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:text="Send An SMS!"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="monospace"

        />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight=".5"
        android:inputType="phone"
        android:hint="Phone to send to"/>

    <EditText
        android:id="@+id/etMsg"
        android:layout_width="match_parent"
        android:minLines="6"
        android:gravity="top|left"
        android:layout_height="0dp" android:layout_weight="5.5"
        android:hint="Message to send"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:text="Send!"
        android:onClick="sendSMS"/>

</LinearLayout>