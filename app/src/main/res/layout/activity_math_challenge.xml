<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="14">

    <TextView
        android:id="@+id/tvQuestionNumberDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:text="A out of B" android:gravity="center" android:textSize="24sp" android:textColor="#FF888888"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="2" android:text="A +-*/^ B = ?" android:gravity="center" android:textSize="42sp" android:textColor="#333333"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="9" android:weightSum="3">

        <TableRow android:layout_height="0dp" android:layout_weight="1" android:weightSum="3">
            <Button android:id="@+id/buttonOne" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonTwo" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonThree" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/buttonFour" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonFive" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonSix" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/buttonSeven" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonEight" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
            <Button android:id="@+id/buttonNine" android:textSize="24sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="2dp" android:gravity="center"/>
        </TableRow>

    </TableLayout>

</LinearLayout>